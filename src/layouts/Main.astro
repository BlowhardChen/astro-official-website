---
import Layout from "./Layout.astro";
import Nav from "../components/Navbar/Nav.astro";
import MobileNav from "../components/Navbar/MobileNav.astro";
import Footer from "../components/Footer/Footer.astro";
import MobileFooter from "../components/Footer/MobileFooter.astro";
import Responsive from "../components/Responsive.astro";

interface Props {
  title?: string;
}

const { title} = Astro.props;
---

<Layout title={title}>
  <Responsive>
    <Nav slot="large" />
    <MobileNav slot="small" />
  </Responsive>

  <slot />

  <Responsive>
    <Footer slot="large" />
    <MobileFooter slot="small" />
  </Responsive>
</Layout>
